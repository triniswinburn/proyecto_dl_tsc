<p id="notice"><%= notice %></p>

<p><h3>Listado de Cotizaciones</h1></p>


<table>
  <thead>
    <tr>
      <th>Nombre Completo</th>
      <th>Email</th>
      <th>Teléfono</th>
      <th>Mensaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotations.each do |quotation| %>
      <tr>
        <td><%= quotation.clientName %></td>
        <td><%= quotation.clientEmail %></td>
        <td><%= quotation.clientPhone %></td>
        <td><%= quotation.clientMessaje %></td>

        <td><%= link_to 'Mostrar', quotation %></td>
        <td><%= link_to 'Editar', edit_quotation_path(quotation) %></td>
        <td><%= link_to 'Borrar', quotation, method: :delete, data: { confirm: 'Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>