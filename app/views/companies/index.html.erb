<p id="notice"><%= notice %></p>

<h1>Empresas</h1>

<br><br>

<table>
  <thead>
    <tr>
      <th>ID Empresa</th>
      <th></th><th></th><th></th><th></th>
      <th>Nombre</th>
      <th></th><th></th><th></th><th></th>
      <th style="background-color: #5bc0de; border-radius: 5px; padding: 10px;">Email</th>
      <th></th><th></th><th></th><th></th>
      <th style="width: 150px;">Dirección Empresa</th>
      <th></th><th></th><th></th><th></th>
      <th style="width: 100px;">ID Usuario</th>
      <th></th><th></th><th></th><th></th>
      <th>Nombre Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td class="text"><%= company.id %></td>
        <td></td><td></td><td></td><td></td>
        <td class="text"><%= company.name %></td>
        <td></td><td></td><td></td><td></td>
        <td class="text" style="background-color: #cccccc; border-radius: 12px; border: solid 4px white; padding: 10px; width: 185px;">
        <a href="mailto:<%= company.email  %>" ><%= company.email  %></a>&nbsp;&nbsp;
        <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
        </td>
        <td></td><td></td><td></td><td></td>
        <td class="text"><%= company.address %></td>
        <td></td><td></td><td></td><td></td>
        <td class="text"><%= company.user_id %></td>
        <td></td><td></td><td></td><td></td>
        <td class="text"><%= company.user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-default" style="margin-right: 20px;"><%= link_to 'Atrás', root_path %></button>


