<h1>Casas Pre-fabricadas</h1>
<p>Utiliza los filtros para definir la casa prefabricada que andas buscando</p>

<br>

<!-- FILTRO REGION -->
<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Región <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" style="font-size: 10px;">
    <% Region.all.each do |region| %>
      <li><a href="<%= root_path(region: region.id)%>"><%= region.name  %></a></li>
    <% end %>  
  </ul>
</div>

<!-- FILTRO TAMAÑO -->
<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Tamaño <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" style="font-size: 10px;">
    <% HouseSize.all.each do |house_size| %>
      <li><a href="<%= root_path(house_size: house_size.id)%>"><%= house_size.name  %></a></li>
    <% end %>
  </ul>
</div>

<!-- FILTRO ARMADO -->
<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Armado? <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" style="font-size: 10px;">
    <% HouseBuild.all.each do |house_build| %>
      <li><a href="<%= root_path(house_build: house_build.id)%>"><%= house_build.name %></a></li>
    <% end %>
  </ul>
</div>

<!-- FILTRO PRECIO -->
<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Valor Aprox <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" style="font-size: 10px;">
    <% HouseValue.all.each do |house_value| %>
      <li><a href="<%= root_path(house_value: house_value.id)%>"><%= house_value.name  %></a></li>
    <% end %>
  </ul>
</div>

<!-- BOTON BORRAR FILTROS -->
<a href="<%= root_path%>"><button type="button" class="btn btn-default navbar-btn">Borrar Filtros</button></a>

<br><br><br>

<div class="container">
  <div class="row">
    <% @houses.each do |house| %>
    <div class="col-sm-4 col-md-4">
      <div class="thumbnail">
        <%= image_tag house.photo %>
        <div class="caption">
          <h3> <%= house.name %> </h3>
          <p><h5><%= house.description %></h5></p>
          <p><h5><%= house.mts %></h5></p>
          <%= link_to "Ver", house, class: "btn btn-default", role: "button" %>
        </div>
      </div>
      </div>
    <% end %>
    </div>
</div>